{
  "name": "react-generate",
	"displayName": "React boilerplate generator",
	"description": "A small extension that help you to create component's boilerplate",
	"version": "2.0.0",
	"publisher": "devianllert",
	"author": {
		"name": "Ruslan Povolockii",
		"email": "devianllert@gmail.com",
		"url": "https://github.com/devianllert"
	},
	"icon": "public/react.png",
	"bugs": {
		"url": "https://github.com/devianllert/vscode-react-generator/issues",
		"email": "devianllert@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/devianllert/vscode-react-generator"
	},
	"homepage": "https://github.com/devianllert/vscode-react-generator",
	"engines": {
		"vscode": "^1.69.0"
	},
	"keywords": [
		"react generator",
		"create files",
		"create folders"
	],
	"categories": [
		"Other"
	],
	"galleryBanner": {
		"color": "#563A8E",
		"theme": "dark"
	},
  "activationEvents": [
    "onCommand:react-generate.creator"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "react-generate.creator",
        "title": "Create React Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "react-generate.creator"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.69.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}